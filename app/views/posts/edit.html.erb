<h2>投稿の編集</h2>
<div>
  <div>
    <% @post.errors.full_messages.each do |messages| %>
    <%= messages %><br>
    <% end %>
  </div>
  <%= form_tag("/posts/#{@post.id}/update") do %>
  <textarea name="content">
<%= @post.content %>
</textarea><br>
  <input type="submit" value="保存"><br>
  <% end %>
</div>
